
@model List<RentaCar.Models.tbl_marka>


@{
    ViewBag.Title = "Marka";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>MarkaID</th>
                <th>Markası İşlemleri</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.MarkaID</td>
                    <td>@c.MarkaAdi</td>
                    <td><a href="/Admin/MarkaSil/@c.MarkaID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Admin/MarkaGetir/@c.MarkaID" class="btn btn-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a href="/Admin/YeniMarka/" class="btn btn-primary">Marka Ekle</a>
