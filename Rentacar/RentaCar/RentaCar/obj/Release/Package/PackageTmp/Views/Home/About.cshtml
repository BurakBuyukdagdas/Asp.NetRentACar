@using RentaCar.MVVM
@model AltSayfa

@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/defaultLayout.cshtml";
}



<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/Content/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>Hakkımızda <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Hakkımızda</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-about">
    <div class="container">
        @foreach (var item in Model.HakkimizdaSayfa)
        {
            <div class="row no-gutters">
                <div class="col-md-6 p-md-5 img img-2 d-flex justify-content-center align-items-center" style="background-image: url(/Content/images/about.jpg);">
                </div>
                <div class="col-md-6 wrap-about ftco-animate">
                    <div class="heading-section heading-section-white pl-md-5">
                        <span class="subheading">Hakkımızda</span>
                        <h2 class="mb-4">Firmamıza Hoş Geldiniz</h2>

                        <p> @item.Aciklama</p>
                        <p><a href="/Home/Araclar" class="btn btn-primary py-3 px-4">Araçlarımızı Gör</a></p>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<section class="ftco-section ftco-intro" style="background-image: url(/Content/images/bg_3.jpg);">
    <div class="overlay"></div>
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-md-6 heading-section heading-section-white ftco-animate">
                <h2 class="mb-3">Sizden gelenler bizleri motive ediyor ve işimize olan saygımız artıyor.</h2>
                <a href="/Home/Blog" class="btn btn-primary btn-lg">Sizden Gelenler</a>
            </div>
        </div>
    </div>
</section>




<section class="ftco-counter ftco-section img" id="section-counter">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-3 justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text text-border d-flex align-items-center">
                        <strong class="number" data-number="30">0</strong>
                        <span>Yıllık <br>Deneyim</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text text-border d-flex align-items-center">
                        <strong class="number" data-number="1090">0</strong>
                        <span>Adet <br>Araç</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text text-border d-flex align-items-center">
                        <strong class="number" data-number="2590">0</strong>
                        <span>Mutlu <br>Müşteri</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text d-flex align-items-center">
                        <strong class="number" data-number="6">0</strong>
                        <span>Adet <br>Şube</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>








