@model RentaCar.Models.tbl_Arac


@{
    ViewBag.Title = "AracDetay";
    Layout = "~/Views/Shared/defaultLayout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/Content/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>Araçlarımız <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">@Model.tbl_marka.MarkaAdi Detay</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12 text-center d-flex ftco-animate">
                <div class="blog-entry justify-content-end mb-md-5">
                    <div class="block-20 img" style="background-image: url('@Model.Gorsel');"></div>
                    <style>
                        .styled-table {
                            width: 100%;
                            background-color: #f5f5f5;
                            border-collapse: collapse;
                            margin: 20px 0;
                            font-size: 16px;
                            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
                            font-family: Arial, sans-serif;
                        }

                            .styled-table th, .styled-table td {
                                padding: 12px 15px;
                                text-align: left;
                                border-bottom: 1px solid #ddd;
                                color: black;
                            }

                            .styled-table th {
                                background-color: #f2f2f2;
                                font-weight: 600;
                            }

                            .styled-table tbody tr:hover {
                                background-color: #e0e0e0;
                            }
                    </style>



                    <table class="styled-table">
                        <tbody>
                            <tr>
                                <th>Markası</th>
                                <td>@Model.tbl_marka.MarkaAdi</td>
                            </tr>
                            <tr>
                                <th>Türü</th>
                                <td>@Model.tbl_Aracturu.TipAdi</td>
                            </tr>
                            <tr>
                                <th>Rengi</th>
                                <td>@Model.Rengi</td>
                            </tr>
                            <tr>
                                <th>Vitesi</th>
                                <td>@Model.Vitesi</td>
                            </tr>
                            <tr>
                                <th>Fiyatı</th>
                                <td>@Model.Fiyati TL</td>
                            </tr>
                            <tr>
                                <th>Detayları</th>
                                <td>@Model.Aciklama</td>
                            </tr>
                        </tbody>
                    </table>


                    <style>
                        .d-flex {
                            justify-content: center;
                        }

                        .btn {
                            font-size: 1.5em; /* veya istediğiniz büyüklükte bir değer */
                        }
                    </style>

                    <div class="d-flex mb-0 d-block">
                        <a href="https://wa.me/905345811690?text=Merhaba%2C%20Araç%20Kiralamak%20istiyorum." class="btn btn-secondary py-2 ml-1">Araç Kirala</a>
                    </div>


                </div>
            </div>
        </div>
    </div>
</section>