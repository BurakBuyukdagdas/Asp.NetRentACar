
@model List<RentaCar.Models.tbl_Aracturu>

@{
    ViewBag.Title = "AracTuru";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Tür ID</th>
                <th>Araç Türü İşlemleri</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.TipID</td>
                    <td>@c.TipAdi</td>
                    <td><a href="/Admin/TurSil/@c.TipID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Admin/TurGetir/@c.TipID" class="btn btn-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a href="/Admin/YeniTur/" class="btn btn-primary">Araç Türü Ekle</a>
