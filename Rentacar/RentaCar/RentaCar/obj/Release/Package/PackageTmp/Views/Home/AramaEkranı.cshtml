@using RentaCar.MVVM
@model AltSayfa

@{
    ViewBag.Title = "AramaEkranı";
    Layout = "~/Views/Shared/defaultLayout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/Content/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>Arama <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Arama Sonuçları</h1>
            </div>
        </div>
    </div>
</section>


<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @if (Model.AramaSayfa != null && Model.AramaSayfa.Any())
            {
                foreach (var item in Model.AramaSayfa)
                {
                    <div class="col-md-4">
                        <div class="car-wrap rounded ftco-animate">
                            <div class="img rounded d-flex align-items-end">
                                <a href="/Home/AracDetay/@item.AracID">
                                    <img src="@item.Gorsel" alt="Araç Görseli" class="img-fluid" />
                                </a>
                            </div>
                            <div class="text">
                                <h2 class="mb-0"><a href="/Home/AracDetay/@item.AracID">@item.tbl_marka.MarkaAdi</a></h2>
                                <div class="d-flex mb-3">
                                    <span class="cat">@item.Vitesi Vites</span>
                                    <p class="price ml-auto">@item.Fiyati TL <span>/1 Gün</span></p>
                                </div>
                                <p class="d-flex mb-0 d-block"><a href="/Home/AracDetay/@item.AracID" class="btn btn-primary py-2 mr-1">Detaylar</a> <a href="/Home/iletisim" class="btn btn-secondary py-2 ml-1">İletişim</a></p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <!-- Arama sonucu bulunamadı mesajı -->
                <div class="text-center">
                    <p>Aradığınız kriterde araç bulunamadı.</p>
                    <a href="/Home/Araclarimiz" class="btn btn-primary">Diğer Araçlarımızı İnceleyin</a>
                </div>
            }
        </div>
    </div>
</section>

