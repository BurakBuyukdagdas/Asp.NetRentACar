@model RentaCar.Models.tbl_Blog


@{
    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Shared/defaultLayout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/Content/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>Araçlarımız <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Tüm Araçlarımız</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12 text-center d-flex ftco-animate">
                <div class="blog-entry justify-content-end mb-md-5">
                    <a href="/Home/BlogDetay/@Model.ID" class="block-20 img" style="background-image: url('@Model.BlogImage'); background-size: cover; background-position: center;">
                    </a>
                    <div class="text px-md-5 pt-4">
                        <div class="meta mb-3">
                            <div><a href="#">@Model.Tarih</a></div>
                        </div>
                        <h3 class="heading mt-2"><a href="/Home/BlogDetay/@Model.ID">@Model.Baslik</a></h3>
                        <p>@Model.Aciklama</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
